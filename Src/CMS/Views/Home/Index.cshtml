@using Kendo.Mvc.UI
@model CMS.Models.Models.CMSComponents.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<form asp-controller="Home" asp-action="CreateView">
    <div class="text-center">
        
        <h1 style="margin-bottom:50px">Конструктор</h1>
        
        <div class="row d-flex justify-content-center" style="margin-bottom:150px;">
            <div class="col-md-5">
                @(Html.Kendo().MultiColumnComboBoxFor(h => h.SelectedHeader)
                    .Label(label => label.Content("Headers"))
                    .DataTextField("ComponentName")
                    .DataValueField("OuterHtml")
                    .Columns(columns =>
                    {
                        columns.Add().Field("ComponentName").Title("Название");
                        columns.Add().Field("ComponentTag").Title("Тег");
                        columns.Add().Field("ComponentColor").Title("Цвет");
                        columns.Add().Field("ComponentClass").Title("Класс");
                    })
                    .Placeholder("Выберите \"Header\"")
                    .DataSource(source =>
                    {
                        source.Read(read =>
                        {
                            read.Action("GetHeaders", "Home");
                        })
                        .ServerFiltering(false);
                    }))
            </div>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-md-5" style="margin-bottom: 150px;">
                @(Html.Kendo().MultiColumnComboBoxFor(b => b.SelectedBody)
                    .Label(label => label.Content("Bodies"))
                    .DataTextField("ComponentName")
                    .DataValueField("OuterHtml")
                    .Columns(columns =>
                    {
                        columns.Add().Field("ComponentName").Title("Название");
                        columns.Add().Field("ComponentTag").Title("Тег");
                        columns.Add().Field("ComponentColor").Title("Цвет");
                        columns.Add().Field("ComponentClass").Title("Класс");
                    })
                    .Placeholder("Выберите \"Body\"")
                    .DataSource(source =>
                    {
                        source.Read(read =>
                        {
                            read.Action("GetBodies", "Home");
                        })
                        .ServerFiltering(false);
                    })
                    )
            </div>
        </div>

        <div class="row d-flex justify-content-center">
            <div class="col-md-5" style="margin-bottom: 150px;">
                @(Html.Kendo().MultiColumnComboBoxFor(f => f.SelectedFooter)
                    .Label(label => label.Content("Footers"))
                    .DataTextField("ComponentName")
                    .DataValueField("OuterHtml")
                    .Columns(columns =>
                    {
                        columns.Add().Field("ComponentName").Title("Название");
                        columns.Add().Field("ComponentTag").Title("Тег");
                        columns.Add().Field("ComponentColor").Title("Цвет");
                        columns.Add().Field("ComponentClass").Title("Класс");
                    })
                    .Placeholder("Выберите \"Footer\"")
                    .DataSource(source =>
                    {
                        source.Read(read =>
                        {
                            read.Action("GetFooters", "Home");
                        })
                        .ServerFiltering(false);
                    })
                    )
            </div>
        </div>
        
        <button type="submit" class="btn btn-outline-success">Создать</button>
    </div>
</form>